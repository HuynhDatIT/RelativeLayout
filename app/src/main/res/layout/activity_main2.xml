<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Text4"
        android:text="4"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="30sp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Text3"
        android:text="3"
        android:textColor="@color/white"
        android:background="@color/purple_500"
        android:textSize="30sp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="20dp"
        android:layout_toLeftOf="@+id/Text4"
        android:layout_above="@+id/Text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Text2"
        android:text="2"
        android:textColor="@color/white"
        android:background="@color/purple_200"
        android:textSize="30sp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="20dp"
        android:layout_toLeftOf="@+id/Text3"
        android:layout_above="@+id/Text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="1"
        android:textColor="@color/white"
        android:background="@color/teal_200"
        android:textSize="30sp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="20dp"
        android:layout_toLeftOf="@+id/Text2"
        android:layout_above="@+id/Text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Text5"
        android:text="5"
        android:textColor="@color/white"
        android:background="@color/teal_700"
        android:textSize="30sp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="20dp"
        android:layout_toLeftOf="@+id/Text4"
        android:layout_below="@+id/Text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Text6"
        android:text="6"
        android:textColor="@color/white"
        android:background="#E91E63"
        android:textSize="30sp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="20dp"
        android:layout_toLeftOf="@+id/Text5"
        android:layout_below="@+id/Text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="7"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="#FFEB3B"
        android:paddingHorizontal="40dp"
        android:paddingVertical="20dp"
        android:layout_below="@+id/Text6"
        android:layout_toLeftOf="@+id/Text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>